# COINSCIOUS Platform Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# CHAIN CONFIGURATION
# =============================================================================

# Base Sepolia RPC URL
RPC_URL_BASE_SEPOLIA=https://sepolia.base.org

# Private key for the deployer wallet (NEVER use a mainnet key here!)
PRIVATE_KEY=0x...

# Etherscan API key for contract verification (optional)
ETHERSCAN_API_KEY=

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Test mode flag (true for testnet, false for mainnet)
TEST_MODE=true

# Deployer address (will be derived from PRIVATE_KEY if not set)
DEPLOYER_ADDRESS=0x...

# Gnosis Safe address that will own the contracts
GNOSIS_SAFE_ADDRESS=0x...

# Timelock Controller address for SecurityToken controller
TIMELOCK_CONTROLLER_ADDRESS=0x...

# =============================================================================
# USDC CONFIGURATION
# =============================================================================

# Use mock USDC for testing (true) or real USDC (false)
MOCK_USDC=true

# Mock USDC address (only used if MOCK_USDC=true)
MOCK_USDC_ADDRESS=0x...

# Real USDC address (only used if MOCK_USDC=false)
# USDC_ADDRESS=0x...

# =============================================================================
# CONSOLE CONFIGURATION
# =============================================================================

# Network name displayed in console
NEXT_PUBLIC_NETWORK_NAME="Base Sepolia"

# Path to deployments JSON file
NEXT_PUBLIC_DEPLOYMENTS_JSON_PATH=deployments/base-sepolia-addresses.json

# WalletConnect project ID (for wallet connections)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-project-id

# =============================================================================
# INDEXER CONFIGURATION
# =============================================================================

# Database connection string
DATABASE_URL=postgres://username:password@localhost:5432/coinscious

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# =============================================================================
# ALERTING CONFIGURATION
# =============================================================================

# Slack webhook URL for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Email configuration for alerts (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@coinscious.com
SMTP_PASS=your-app-password

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================

# 12(g) threshold limits
TWELVE_G_LIMIT=2000
TWELVE_G_WARN1_PCT=70
TWELVE_G_WARN2_PCT=90

# Accreditation provider
ACCRED_PROVIDER=InvestReady

# Block payouts if no tax form (true/false)
BLOCK_IF_NO_TAX_FORM=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT secret for API authentication
JWT_SECRET=your-super-secret-jwt-key

# HMAC secret for webhook verification
HMAC_SECRET=your-super-secret-hmac-key

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://console.coinscious.com

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=300

# Event processing batch size
EVENT_BATCH_SIZE=100

# Event processing interval (seconds)
EVENT_PROCESSING_INTERVAL=10

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable debug mode (true/false)
DEBUG=false

# Enable verbose logging (true/false)
VERBOSE_LOGGING=false

# Test database URL (for running tests)
TEST_DATABASE_URL=postgres://username:password@localhost:5432/coinscious_test

