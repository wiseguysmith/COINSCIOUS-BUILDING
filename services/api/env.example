# COINSCIOUS API Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=development
API_HOST=localhost:3000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/coinscious"

# Security
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"
HMAC_SECRET="your-super-secret-hmac-key-change-in-production-min-32-chars"

# CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# Blockchain Integration (for future use)
BASE_RPC_URL="https://mainnet.base.org"
BASE_SEPOLIA_RPC_URL="https://sepolia.base.org"
PRIVATE_KEY="your-private-key-for-contract-interactions"

# External Services
ALLOY_API_KEY="your-alloy-api-key"
PARALLEL_API_KEY="your-parallel-api-key"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
